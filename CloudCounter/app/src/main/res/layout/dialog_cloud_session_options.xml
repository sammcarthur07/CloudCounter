<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Particle container (behind card) -->
    <FrameLayout
        android:id="@+id/particleContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Electric surge effect layer -->
    <View
        android:id="@+id/electricSurgeEffect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/electric_surge_border" />

    <!-- Dissolve effect layer -->
    <View
        android:id="@+id/dissolveEffect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.7" />

    <!-- Main Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/mainCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#E64A4A4A"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp">

        <!-- Animated border overlay -->
        <View
            android:id="@+id/animatedBorder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/animated_gradient_border" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Title with pulsing glow -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">

                <!-- Glow effect behind text -->
                <View
                    android:id="@+id/titleGlow"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/glow_effect" />

                <TextView
                    android:id="@+id/dialogTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="START CLOUD SESSION"
                    android:textColor="@color/my_light_primary"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.15"
                    android:shadowColor="@color/my_light_primary"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="20" />
            </FrameLayout>

            <!-- Option 1: New Room -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardNewRoom"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="#33FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Shimmer overlay -->
                    <View
                        android:id="@+id/shimmerNewRoom"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shimmer_gradient" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp">

                        <TextView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/option_icon_background"
                            android:gravity="center"
                            android:text="ðŸš€"
                            android:textSize="24sp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="New Room"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Create a fresh session"
                                android:textColor="@color/tab_unselected_text_color_on_grey"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/pulse_dot_green" />
                    </LinearLayout>
                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <!-- Option 2: Existing Room -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardExistingRoom"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="#33FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:id="@+id/shimmerExistingRoom"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shimmer_gradient" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp">

                        <TextView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/option_icon_background"
                            android:gravity="center"
                            android:text="ðŸ”¥"
                            android:textSize="24sp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Existing Room"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Continue active sessions"
                                android:textColor="@color/tab_unselected_text_color_on_grey"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/pulse_dot_green" />
                    </LinearLayout>
                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <!-- Option 3: Join by Code -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardJoinByCode"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="#33FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:id="@+id/shimmerJoinByCode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shimmer_gradient" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp">

                        <TextView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/option_icon_background"
                            android:gravity="center"
                            android:text="ðŸ”—"
                            android:textSize="24sp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Join by Code"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Enter a share code"
                                android:textColor="@color/tab_unselected_text_color_on_grey"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/pulse_dot_green" />
                    </LinearLayout>
                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <!-- Divider with glow -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="16dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/gradient_divider" />
            </LinearLayout>

            <!-- Option 4: Local Session -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardLocalSession"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="#1A000000"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/option_icon_background_grey"
                        android:gravity="center"
                        android:text="ðŸ’¨"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:text="Local Session"
                        android:textColor="@color/tab_unselected_text_color_on_grey"
                        android:textSize="15sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>