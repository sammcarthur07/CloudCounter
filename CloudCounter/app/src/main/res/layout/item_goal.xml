<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Custom circular progress bar -->
        <com.sam.cloudcounter.CustomCircularProgressBar
            android:id="@+id/circularProgressBar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/textGoalName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="3 Joints, 2 Cones"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/circularProgressBar"
            app:layout_constraintEnd_toStartOf="@id/buttonDelete" />

        <TextView
            android:id="@+id/textGoalType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/textGoalName"
            app:layout_constraintStart_toStartOf="@id/textGoalName" />

        <TextView
            android:id="@+id/textRounds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rounds: 12"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/my_light_primary"
            android:visibility="gone"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/textGoalType"
            app:layout_constraintStart_toEndOf="@id/textGoalType" />

        <TextView
            android:id="@+id/textProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 / 5"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/textGoalType"
            app:layout_constraintStart_toStartOf="@id/textGoalName" />

        <TextView
            android:id="@+id/textProgressPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40%"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/my_light_primary"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/textProgress"
            app:layout_constraintStart_toEndOf="@id/textProgress" />

        <TextView
            android:id="@+id/textSelectedSmokers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="For: Sam (0)"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="2dp"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/textProgress"
            app:layout_constraintStart_toStartOf="@id/textGoalName"
            app:layout_constraintEnd_toStartOf="@id/buttonDelete" />

        <TextView
            android:id="@+id/textBreakdown"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="1/2 joints â€¢ 1/3 cones"
            android:textSize="12sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/textSelectedSmokers"
            app:layout_constraintStart_toStartOf="@id/textGoalName"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textTimeRemaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23 hours left"
            android:textSize="12sp"
            android:textColor="@color/design_default_color_secondary"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/textBreakdown"
            app:layout_constraintStart_toStartOf="@id/textGoalName" />

        <LinearLayout
            android:id="@+id/layoutChips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/textTimeRemaining"
            app:layout_constraintStart_toStartOf="@id/textGoalName">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipRecurring"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Recurring"
                android:textSize="10sp"
                android:visibility="gone"
                app:chipMinHeight="24dp"
                app:chipBackgroundColor="@color/chip_background_selected" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipActive"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Active"
                android:textSize="10sp"
                android:layout_marginStart="4dp"
                android:visibility="gone"
                app:chipMinHeight="24dp"
                app:chipBackgroundColor="@color/my_light_primary" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipPaused"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Paused"
                android:textSize="10sp"
                android:layout_marginStart="4dp"
                android:visibility="gone"
                app:chipMinHeight="24dp"
                app:chipBackgroundColor="@android:color/holo_orange_light" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/buttonDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Delete Goal"
            android:tint="@color/light_grey"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageButton
            android:id="@+id/buttonPause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_media_pause"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Pause Goal"
            android:tint="@color/light_grey"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/buttonDelete"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageButton
            android:id="@+id/buttonComplete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Complete Goal"
            android:tint="@color/light_grey"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/buttonPause"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageButton
            android:id="@+id/buttonNotification"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_notification"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Toggle Notifications"
            android:tint="@color/light_grey"
            android:layout_marginTop="12dp"
            android:scaleType="fitCenter"
            android:padding="0dp"
            app:layout_constraintTop_toBottomOf="@id/buttonComplete"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>