<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Scrollable content area -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingBottom="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="16dp">

            <!-- App Icon Header -->
            <ImageView
                android:id="@+id/imageAppIcon"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="24dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <!-- 420 Location Text - increased bottom margin from 24dp to 56dp -->
            <TextView
                android:id="@+id/text420Location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="36dp"
                android:text="420 somewhere right now!"
                android:textSize="14sp"
                android:textStyle="italic"
                android:textColor="?android:attr/textColorPrimary"
                android:gravity="center" />

            <!-- First Neon Gradient Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/gradient_divider"
                android:layout_marginBottom="12dp"/>

            <!-- 420 Notification Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Get 420 notification"
                android:textSize="12sp"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <!-- Morning section -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginEnd="20dp">

                    <CheckBox
                        android:id="@+id/checkbox420Morning"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:text="Morning"
                        android:textSize="11sp"
                        android:scaleX="0.85"
                        android:scaleY="0.85" />

                    <TextView
                        android:id="@+id/textMorningTimer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-4dp"
                        android:text="0h 0m 0s"
                        android:textSize="10sp"
                        android:textColor="@color/my_light_primary"
                        android:textStyle="bold"
                        android:visibility="gone" />
                </LinearLayout>

                <!-- Afternoon section -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <CheckBox
                        android:id="@+id/checkbox420Afternoon"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:text="Afternoon"
                        android:textSize="11sp"
                        android:scaleX="0.85"
                        android:scaleY="0.85" />

                    <TextView
                        android:id="@+id/textAfternoonTimer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-4dp"
                        android:text="0h 0m 0s"
                        android:textSize="10sp"
                        android:textColor="@color/my_light_primary"
                        android:textStyle="bold"
                        android:visibility="gone" />
                </LinearLayout>

            </LinearLayout>

            <!-- Second Neon Gradient Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/gradient_divider"
                android:layout_marginBottom="24dp"/>

            <!-- About Content - Just the text, no title -->
            <TextView
                android:id="@+id/textAboutContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:lineSpacingExtra="3dp"
                android:textColor="?android:attr/textColorPrimary" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Message Input Section - Fixed at bottom with proper keyboard handling -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/messageInputCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Type your message..."
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="2"
                    android:maxLines="4"
                    android:gravity="top"
                    android:inputType="textMultiLine|textCapSentences"
                    android:imeOptions="actionSend" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/textCharCount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0/4000"
                    android:textSize="12sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_gravity="center_vertical" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send"
                    style="@style/Widget.MaterialComponents.Button" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Floating User Manual Button -->
    <androidx.cardview.widget.CardView
        android:id="@+id/btnUserManual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        app:cardBackgroundColor="#00000000"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/user_manual_button_background"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp">

            <TextView
                android:id="@+id/textUserManual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Manual"
                android:textColor="#98FB98"
                android:textSize="10sp"
                android:textStyle="bold"
                android:letterSpacing="0.05" />

        </FrameLayout>

    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>