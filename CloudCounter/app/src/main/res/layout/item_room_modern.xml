<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardRoom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="#4A4A4A"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <!-- Neon border overlay (will be animated) -->
    <View
        android:id="@+id/neonBorder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/neon_border_animation"
        android:visibility="gone" />

    <!-- Shimmer overlay -->
    <View
        android:id="@+id/shimmerOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shimmer_gradient"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row: Room Name, Lock Icon, User Count Badge -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textRoomName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Room Name"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iconLock"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_lock"
                android:tint="@color/my_light_primary"
                android:visibility="gone" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/my_light_primary"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/textUserCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:text="3/5"
                    android:textColor="@color/my_dark_grey_background"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Metadata Row: Created Date and Last Active -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textCreatedAt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Created: 12/15 14:30"
                android:textColor="@color/tab_unselected_text_color_on_grey"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textLastActive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active now"
                android:textColor="@color/my_light_primary"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="12dp"
            android:background="#33FFFFFF" />

        <!-- Participants Section -->
        <LinearLayout
            android:id="@+id/containerParticipants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Participants will be added dynamically here -->
        </LinearLayout>

        <!-- Room Totals Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <!-- Green accent bar -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="8dp"
                android:background="@color/my_light_primary"
                android:alpha="0.6" />

            <TextView
                android:id="@+id/textRoomTotals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Room Total: 15 cones • 8 joints • 3 bowls"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>