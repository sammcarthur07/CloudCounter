<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/mainCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#E64A4A4A"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Green gradient background (like shimmer_gradient) -->
            <View
                android:id="@+id/greenGradientBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.3"
                android:background="@drawable/shimmer_gradient" />

            <View
                android:id="@+id/shimmerOverlay"
                android:layout_width="match_parent"
                android:layout_height="800dp"
                android:alpha="0.3"
                android:background="@drawable/shimmer_gradient" />

            <View
                android:id="@+id/neonBorder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/neon_border_animation" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fadeScrollbars="false"
                android:scrollbarThumbVertical="@drawable/scrollbar_thumb"
                android:scrollbarSize="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/titleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:gravity="center"
                        android:letterSpacing="0.15"
                        android:text="CREATE GOAL"
                        android:textColor="#98FB98"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editGoalName"
                        style="@style/ThemedEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Goal Name (optional)"
                        android:inputType="textCapWords" />

                    <View android:layout_width="match_parent" android:layout_height="2dp" android:background="@drawable/gradient_divider" android:layout_marginVertical="16dp"/>

                    <LinearLayout
                        android:id="@+id/layoutSmokerSelection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView style="@style/SectionHeader" android:text="Select Smokers" android:layout_marginTop="0dp"/>
                        <CheckBox android:id="@+id/checkboxAllSmokers" style="@style/ThemedCheckBox" android:text="All Smokers" />
                        <LinearLayout android:id="@+id/smokersCheckboxContainer" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:paddingTop="8dp"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="2dp" android:background="@drawable/gradient_divider" android:layout_marginVertical="16dp"/>

                    <TextView style="@style/SectionHeader" android:text="Goal Type" android:layout_marginTop="0dp"/>
                    <RadioGroup
                        android:id="@+id/radioGroupType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RadioButton android:id="@+id/radioCurrentSession" style="@style/ThemedRadioButton" android:text="Current Session Only" />
                        <RadioButton android:id="@+id/radioAllSessions" style="@style/ThemedRadioButton" android:checked="true" android:text="All Sessions" />
                        <RadioButton android:id="@+id/radioTimeBased" style="@style/ThemedRadioButton" android:text="Time Based (Daily, Weekly, etc.)" />
                    </RadioGroup>

                    <LinearLayout
                        android:id="@+id/layoutTimeBased"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:visibility="gone">
                        <EditText android:id="@+id/editTimeDuration" style="@style/ThemedEditText" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginEnd="8dp" android:layout_weight="1" android:hint="Duration" android:inputType="number" android:text="1" />
                        <Spinner android:id="@+id/spinnerTimeUnit" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:backgroundTint="#98FB98" />
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="2dp" android:background="@drawable/gradient_divider" android:layout_marginVertical="16dp"/>

                    <TextView style="@style/SectionHeader" android:text="Target Values" android:layout_marginTop="0dp"/>
                    
                    <!-- Activity Type Selector -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Activity Type"
                        style="@style/ThemedRadioButton"
                        android:layout_marginBottom="4dp"/>
                    <Spinner
                        android:id="@+id/spinnerActivityType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:backgroundTint="#98FB98" />
                    
                    <!-- Target Value Input -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Target Count"
                        style="@style/ThemedRadioButton"
                        android:layout_marginBottom="4dp"/>
                    <EditText
                        android:id="@+id/editTargetValue"
                        style="@style/ThemedEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:text="0"
                        android:hint="Enter target count"/>

                    <View android:layout_width="match_parent" android:layout_height="2dp" android:background="@drawable/gradient_divider" android:layout_marginVertical="16dp"/>

                    <TextView style="@style/SectionHeader" android:text="Completion &amp; Options" android:layout_marginTop="0dp"/>
                    <RadioGroup
                        android:id="@+id/radioGroupOverflow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RadioButton android:id="@+id/radioAutoComplete" style="@style/ThemedRadioButton" android:text="Auto-End (Stop at 100%)" />
                        <RadioButton android:id="@+id/radioAllowOverflow" style="@style/ThemedRadioButton" android:checked="true" android:text="Continue Tracking (Beyond 100%)" />
                    </RadioGroup>
                    <CheckBox android:id="@+id/checkboxRecurring" style="@style/ThemedCheckBox" android:text="Recurring (Auto-reset when completed)" />
                    <CheckBox android:id="@+id/checkboxProgressNotifications" style="@style/ThemedCheckBox" android:checked="true" android:text="Progress Notifications (25%, 50%, 75%)" />
                    <CheckBox android:id="@+id/checkboxCompletionNotifications" style="@style/ThemedCheckBox" android:checked="true" android:text="Completion Notifications" />

                    <!-- Button Container with Fixed Height and ClipChildren -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="24dp"
                        android:clipChildren="true"
                        android:clipToPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:clipChildren="true"
                            android:clipToPadding="true">

                            <!-- Cancel Button with Image Press Effect -->
                            <FrameLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="1"
                                android:clipChildren="true"
                                android:clipToPadding="true">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/buttonCancel"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    app:cardBackgroundColor="#33FFFFFF"
                                    app:cardCornerRadius="20dp"
                                    app:cardElevation="0dp">

                                    <FrameLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:clipChildren="true"
                                        android:clipToPadding="true">

                                        <!-- Fixed size container for image -->
                                        <FrameLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:clipChildren="true"
                                            android:clipToPadding="true">

                                            <ImageView
                                                android:id="@+id/imageCancelBackground"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:adjustViewBounds="false"
                                                android:scaleType="centerCrop"
                                                android:src="@drawable/button_pressed_background"
                                                android:visibility="gone" />
                                        </FrameLayout>

                                        <!-- Text on top -->
                                        <TextView
                                            android:id="@+id/textCancel"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:gravity="center"
                                            android:text="Cancel"
                                            android:textColor="@color/white"
                                            android:textSize="14sp"
                                            android:textStyle="bold" />
                                    </FrameLayout>
                                </androidx.cardview.widget.CardView>
                            </FrameLayout>

                            <!-- Create Goal Button with Image Press Effect -->
                            <FrameLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:clipChildren="true"
                                android:clipToPadding="true">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/buttonCreate"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    app:cardBackgroundColor="#98FB98"
                                    app:cardCornerRadius="20dp"
                                    app:cardElevation="4dp">

                                    <FrameLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:clipChildren="true"
                                        android:clipToPadding="true">

                                        <!-- Fixed size container for image -->
                                        <FrameLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:clipChildren="true"
                                            android:clipToPadding="true">

                                            <ImageView
                                                android:id="@+id/imageCreateBackground"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:adjustViewBounds="false"
                                                android:scaleType="centerCrop"
                                                android:src="@drawable/button_pressed_background"
                                                android:visibility="gone" />
                                        </FrameLayout>

                                        <!-- Text on top -->
                                        <TextView
                                            android:id="@+id/textCreate"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:gravity="center"
                                            android:text="Create Goal"
                                            android:textColor="#FFFFFF"
                                            android:textSize="14sp"
                                            android:textStyle="bold" />
                                    </FrameLayout>
                                </androidx.cardview.widget.CardView>
                            </FrameLayout>
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>
            </ScrollView>
        </FrameLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>