<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatsFragment">

    <!-- Background image layer -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/stats_background"
        android:scaleType="centerCrop"
        android:adjustViewBounds="false"
        android:contentDescription="Background decoration" />

    <!-- Main content ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Time period -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Time Period:"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupTimePeriod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:selectionRequired="true"
                android:layout_marginBottom="16dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipMinutely"
                    style="@style/CustomOutlinedChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minutely" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipHourly"
                    style="@style/CustomOutlinedChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hourly" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipDaily"
                    style="@style/CustomOutlinedChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipWeekly"
                    style="@style/CustomOutlinedChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weekly" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipFortnightly"
                    style="@style/CustomOutlinedChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fortnightly" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipMonthly"
                    style="@style/CustomOutlinedChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monthly" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipYearly"
                    style="@style/CustomOutlinedChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yearly" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipAllTime"
                    style="@style/CustomOutlinedChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All Time"
                    android:checked="true" />
            </com.google.android.material.chip.ChipGroup>

            <!-- User(s) selection -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select User(s):"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupUsers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleSelection="false"
                app:selectionRequired="false"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textSelectedUsersSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Smokers"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp" />

            <!-- Category -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Category:"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:selectionRequired="false"
                android:layout_marginBottom="24dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipCategoryAll"
                    style="@style/CustomOutlinedChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All Activities"
                    android:checked="true" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipCategoryJoint"
                    style="@style/CustomOutlinedChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Joints" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipCategoryCone"
                    style="@style/CustomOutlinedChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cones" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipCategoryBowl"
                    style="@style/CustomOutlinedChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bowls" />
            </com.google.android.material.chip.ChipGroup>

            <!-- Stats display -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Count"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="?android:attr/textColorSecondary" />
                <TextView
                    android:id="@+id/textViewTotalCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="125"
                    android:textAppearance="?attr/textAppearanceDisplayMedium"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Average per Unit"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="?android:attr/textColorSecondary" />
                <TextView
                    android:id="@+id/textViewAverage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2.5 / day"
                    android:textAppearance="?attr/textAppearanceDisplayMedium"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Frequency"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="?android:attr/textColorSecondary" />
                <TextView
                    android:id="@+id/textViewFrequency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Every 53 mins"
                    android:textAppearance="?attr/textAppearanceDisplayMedium"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabRefreshStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="131dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_refresh"
        app:backgroundTint="@android:color/transparent"
        app:tint="#80FFFFFF"  app:fabSize="mini"
        app:elevation="0dp"   app:rippleColor="@android:color/transparent" android:contentDescription="Refresh Stats" />

</FrameLayout>