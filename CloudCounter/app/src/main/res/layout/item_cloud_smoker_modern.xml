<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardSmoker"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="#4A4A4A"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <!-- Neon border overlay for online smokers -->
    <View
        android:id="@+id/neonBorder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/neon_border_animation"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row: Status, Name, Lock Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Status Indicator -->
            <View
                android:id="@+id/statusIndicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/status_indicator_online" />

            <TextView
                android:id="@+id/textSmokerName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Smoker Name"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iconLock"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_lock"
                android:tint="@color/my_light_primary"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Share Code Badge -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#33FFFFFF"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/textShareCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:text="Code: ABC123"
                    android:textColor="@color/my_light_primary"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="12dp"
            android:background="#33FFFFFF" />

        <!-- Activity Stats -->
        <TextView
            android:id="@+id/textActivityStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bowls: 5 • Joints: 3 • Cones: 12"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <!-- Total Activities -->
        <TextView
            android:id="@+id/textTotalActivities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Total activities: 20"
            android:textColor="@color/tab_unselected_text_color_on_grey"
            android:textSize="12sp" />

        <!-- Last Active -->
        <TextView
            android:id="@+id/textLastActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Last active: 2 hours ago"
            android:textColor="@color/tab_unselected_text_color_on_grey"
            android:textSize="12sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>