<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background image layer - will be set programmatically or via include -->
    <ImageView
        android:id="@+id/tabBackgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:adjustViewBounds="false"
        android:contentDescription="Background decoration" />

    <!-- Content container - your actual tab content goes here -->
    <FrameLayout
        android:id="@+id/tabContentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>