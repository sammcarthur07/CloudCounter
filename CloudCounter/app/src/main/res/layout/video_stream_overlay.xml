<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- SurfaceViewRenderer for video (bottom layer) -->
    <org.webrtc.SurfaceViewRenderer
        android:id="@+id/videoRenderer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Control buttons in top-right corner (top layer with elevation) -->
    <LinearLayout
        android:id="@+id/controlButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="4dp"
        android:orientation="horizontal"
        android:background="#AA000000"
        android:padding="4dp"
        android:elevation="10dp"
        tools:ignore="UnusedAttribute">

        <!-- Mute audio button -->
        <ImageButton
            android:id="@+id/muteAudioButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_mic_on"
            android:scaleType="centerInside"
            android:padding="6dp"
            android:contentDescription="Mute Audio" />

        <!-- Hide video button -->
        <ImageButton
            android:id="@+id/hideVideoButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_videocam_on"
            android:scaleType="centerInside"
            android:padding="6dp"
            android:contentDescription="Hide Video" />

        <!-- Report button -->
        <ImageButton
            android:id="@+id/reportButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_report"
            android:scaleType="centerInside"
            android:padding="6dp"
            android:contentDescription="Report User" />
    </LinearLayout>

    <!-- User name label at bottom -->
    <TextView
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#AA000000"
        android:padding="6dp"
        android:text="User Name"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:gravity="center"
        android:elevation="5dp"
        tools:ignore="UnusedAttribute" />

    <!-- Muted/Hidden indicator overlay (center, highest elevation) -->
    <LinearLayout
        android:id="@+id/mutedIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="#DD000000"
        android:padding="16dp"
        android:elevation="15dp"
        tools:ignore="UnusedAttribute">

        <ImageView
            android:id="@+id/mutedIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_videocam_off" />

        <TextView
            android:id="@+id/mutedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Video Hidden"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </LinearLayout>

</FrameLayout>