<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Today's Cones -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today's Cones"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textTodayConesActual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Actual: 0"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textTodayConesAdjustment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adjustment: +0"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textTodayConesDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Display: 0"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/btnTodayConesMinus"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_remove_placeholder"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <EditText
                android:id="@+id/editTodayCones"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:text="0"
                android:gravity="center" />

            <ImageButton
                android:id="@+id/btnTodayConesPlus"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/baseline_add_24"
                android:background="?attr/selectableItemBackgroundBorderless" />
        </LinearLayout>

        <!-- Today's Joints -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today's Joints"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textTodayJointsActual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Actual: 0"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textTodayJointsAdjustment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adjustment: +0"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textTodayJointsDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Display: 0"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/btnTodayJointsMinus"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_remove_placeholder"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <EditText
                android:id="@+id/editTodayJoints"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:text="0"
                android:gravity="center" />

            <ImageButton
                android:id="@+id/btnTodayJointsPlus"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/baseline_add_24"
                android:background="?attr/selectableItemBackgroundBorderless" />
        </LinearLayout>

        <!-- All-Time Cones -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All-Time Cones"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textAllTimeConesActual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Actual: 0"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textAllTimeConesAdjustment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adjustment: +0"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textAllTimeConesDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Display: 0"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/btnAllTimeConesMinus"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_remove_placeholder"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <EditText
                android:id="@+id/editAllTimeCones"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:text="0"
                android:gravity="center" />

            <ImageButton
                android:id="@+id/btnAllTimeConesPlus"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/baseline_add_24"
                android:background="?attr/selectableItemBackgroundBorderless" />
        </LinearLayout>

        <!-- All-Time Joints -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All-Time Joints"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textAllTimeJointsActual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Actual: 0"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textAllTimeJointsAdjustment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adjustment: +0"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textAllTimeJointsDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Display: 0"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/btnAllTimeJointsMinus"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_remove_placeholder"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <EditText
                android:id="@+id/editAllTimeJoints"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:text="0"
                android:gravity="center" />

            <ImageButton
                android:id="@+id/btnAllTimeJointsPlus"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/baseline_add_24"
                android:background="?attr/selectableItemBackgroundBorderless" />
        </LinearLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">

            <Button
                android:id="@+id/btnResetAdjustments"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reset All"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnSaveAdjustments"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Save"
                android:layout_marginStart="8dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>