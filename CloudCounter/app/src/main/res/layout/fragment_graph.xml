<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GraphFragment">

    <!-- Background image layer -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/graph_background"
        android:scaleType="centerCrop"
        android:adjustViewBounds="false"
        android:contentDescription="Background decoration" />

    <!-- Main content ScrollView -->
    <ScrollView
        android:id="@+id/scrollContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Time Period Selection -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Graph Time Period:"
                android:textAppearance="?attr/textAppearanceTitleSmall"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupGraphTimePeriod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:selectionRequired="true"
                android:layout_marginBottom="16dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipGraphMinutely"
                    style="@style/CustomOutlinedChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minutely" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipGraphHourly"
                    style="@style/CustomOutlinedChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hourly" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipGraphDaily"
                    style="@style/CustomOutlinedChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipGraphWeekly"
                    style="@style/CustomOutlinedChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weekly" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipGraphFortnightly"
                    style="@style/CustomOutlinedChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fortnightly" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipGraphMonthly"
                    style="@style/CustomOutlinedChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monthly" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipGraphYearly"
                    style="@style/CustomOutlinedChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yearly" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipGraphAllTime"
                    style="@style/CustomOutlinedChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All Time"
                    android:checked="true" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipGraphCustom"
                    style="@style/CustomOutlinedChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Custom" />
            </com.google.android.material.chip.ChipGroup>

            <!-- User Selection -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Users:"
                android:textAppearance="?attr/textAppearanceTitleSmall"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textSelectedUsersSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Smokers"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupUsers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <!-- Line Toggle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toggle Lines:"
                android:textAppearance="?attr/textAppearanceTitleSmall"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <CheckBox
                    android:id="@+id/checkBoxShowJoints"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Joints"
                    android:textColor="?android:attr/textColorPrimary"
                    android:checked="true" />

                <CheckBox
                    android:id="@+id/checkBoxShowCones"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cones"
                    android:textColor="?android:attr/textColorPrimary"
                    android:checked="true" />

                <CheckBox
                    android:id="@+id/checkBoxShowBowls"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bowls"
                    android:textColor="?android:attr/textColorPrimary"
                    android:checked="true" />
            </LinearLayout>

            <!-- Chart Type Selection and Description -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupChartType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipSpacingHorizontal="4dp"
                    app:selectionRequired="true"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipLine"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Line" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipBar"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bar" />

                </com.google.android.material.chip.ChipGroup>

                <TextView
                    android:id="@+id/text_chart_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:gravity="end"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="12sp"
                    tools:text="All time (as hourly)" />

            </LinearLayout>

            <!-- Color Key/Legend -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginBottom="8dp">
                
                <LinearLayout
                    android:id="@+id/custom_legend_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/legend_dot_green"
                        android:drawablePadding="4dp"
                        android:text="Joints"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="12sp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/legend_dot_orange"
                        android:drawablePadding="4dp"
                        android:text="Cones"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="12sp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/legend_dot_blue"
                        android:drawablePadding="4dp"
                        android:text="Bowls"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="12sp"
                        android:layout_marginEnd="12dp" />

                </LinearLayout>
                
            </HorizontalScrollView>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChart"
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:minHeight="400dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="27dp" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>
