<?xml version="1.0" encoding="utf-8"?>
<!-- dialog_add_stash.xml with My Stash / Their Stash tabs and ratio-based calculation -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Tab selection for My Stash / Their Stash -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutStashType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Stash" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Their Stash" />

    </com.google.android.material.tabs.TabLayout>

    <!-- My Stash Section -->
    <LinearLayout
        android:id="@+id/layoutMyStashAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add to My Stash"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>

        <!-- Ratio calculation checkbox and text -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <CheckBox
                android:id="@+id/checkboxUseRatioMy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:id="@+id/textRatioInfoMy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estimated cost based on current ratio (Uncheck for single value removal)"
                android:textStyle="italic"
                android:textSize="11sp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <!-- Amount input with unit spinner -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editAmountMy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Amount"
                    android:inputType="numberDecimal"/>

            </com.google.android.material.textfield.TextInputLayout>

            <Spinner
                android:id="@+id/spinnerUnitMy"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minWidth="100dp"/>

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editPriceMy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Total Price ($)"
                android:inputType="numberDecimal"/>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <!-- Their Stash Section -->
    <LinearLayout
        android:id="@+id/layoutTheirStashAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add to Their Stash"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>

        <!-- Ratio calculation checkbox and text -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <CheckBox
                android:id="@+id/checkboxUseRatioTheir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:id="@+id/textRatioInfoTheir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estimated cost based on current ratio (Uncheck for single value removal)"
                android:textStyle="italic"
                android:textSize="11sp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <!-- Amount input with unit spinner -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editAmountTheir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Amount"
                    android:inputType="numberDecimal"/>

            </com.google.android.material.textfield.TextInputLayout>

            <Spinner
                android:id="@+id/spinnerUnitTheir"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minWidth="100dp"/>

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editPriceTheir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Total Price ($)"
                android:inputType="numberDecimal"/>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

</LinearLayout>