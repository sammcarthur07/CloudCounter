<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background image layer -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/about_background"
        android:scaleType="centerCrop"
        android:adjustViewBounds="false"
        android:contentDescription="Background decoration" />

    <!-- Main content - Fragment container takes full space -->
    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Floating admin control buttons at the top -->
    <LinearLayout
        android:id="@+id/adminControlsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="end"
        android:layout_gravity="top">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStatsControls"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Stats Controls"
            android:textSize="12sp"
            android:visibility="gone"
            android:layout_marginEnd="8dp"
            app:backgroundTint="?attr/colorSurface"
            app:strokeColor="?attr/colorPrimary"
            app:strokeWidth="1dp"
            android:alpha="0.95"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnToggleView"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="View as User"
            android:textSize="12sp"
            android:visibility="gone"
            app:backgroundTint="?attr/colorSurface"
            app:strokeColor="?attr/colorPrimary"
            app:strokeWidth="1dp"
            android:alpha="0.95"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    </LinearLayout>

</FrameLayout>