<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <stroke
                android:width="3dp"
                android:dashWidth="10dp"
                android:dashGap="5dp"
                android:color="#CC98FB98" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <gradient
                android:angle="45"
                android:startColor="#0098FB98"
                android:centerColor="#CC98FB98"
                android:endColor="#0098FB98"
                android:type="sweep" />
        </shape>
    </item>
</layer-list>