<?xml version="1.0" encoding="utf-8"?>
<!-- Place this file in app/src/main/res/drawable/ -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background image -->
    <item>
        <bitmap
            android:src="@drawable/chat_bg_public"
            android:gravity="center|fill"
            android:alpha="0.15" />
    </item>

    <!-- Optional: Add a slight tint overlay for better text readability -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#E6FFFFFF"
                android:endColor="#F2FFFFFF"
                android:angle="270" />
        </shape>
    </item>

</layer-list>